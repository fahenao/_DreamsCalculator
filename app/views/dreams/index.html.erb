<p id="notice"><%= notice %></p>

<h1>Listing Dreams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Dream</th>
      <th>Amount</th>
      <th>Term</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dreams.each do |dream| %>
      <tr>
        <td><%= dream.name %></td>
        <td><%= dream.email %></td>
        <td><%= dream.dream %></td>
        <td><%= dream.amount %></td>
        <td><%= dream.term %></td>
        <td><%= dream.comments %></td>
        <td><%= link_to 'Show', dream %></td>
        <td><%= link_to 'Edit', edit_dream_path(dream) %></td>
        <td><%= link_to 'Destroy', dream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

